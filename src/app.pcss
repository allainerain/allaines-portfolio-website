/* Import Tailwind base, components, and utilities */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Font-face definition */
@font-face {
  font-family: "SF Pro Text";
  src: url("/fonts/SF-Pro/SF-Pro.ttf");
  font-weight: normal;
}

/* Global heading and paragraph styles */
h1 {
  font-family: "SF Pro Display", sans-serif;
  font-weight: 500;
  line-height: 120%;
}

h2 {
  font-weight: 500;
  line-height: 120%;
}

h3 {
  font-weight: 100;
  line-height: auto;
}

h4 {
  font-family: "SF Pro Text", sans-serif;
  font-weight: 100;
  line-height: 140%;
}

h5 {
  font-family: "SF Pro Text", sans-serif;
  font-weight: 100;
  line-height: auto;
}

p {
  font-family: "SF Pro Text", sans-serif;
  font-weight: 100;
  line-height: auto;
}

h6 {
  font-family: "SF Pro Text", sans-serif;
  font-weight: 200;
  line-height: auto;
}

/* Responsive styles */

/* Small devices (portrait phones, less than 576px) */
@media (max-width: 800px) {
  h1 {
    font-size: 40px;
  }

  h2 {
    font-size: 32px;
  }

  h3 {
    font-size: 24px;
  }

  h4 {
    font-size: 22px;
  }

  h5 {
    font-size: 20px;
  }

  p {
    font-size: 16px;
  }

  h6 {
    font-size: 14px;
  }
}

/* Medium devices*/
@media (min-width: 800px) {
  h1 {
    font-size: 50px;
  }

  h2 {
    font-size: 36px;
  }

  h3 {
    font-size: 24px;
  }

  h4 {
    font-size: 22px;
  }

  h5 {
    font-size: 20px;
  }

  p {
    font-size: 16px;
  }

  h6 {
    font-size: 14px;
  }
}

@media (min-width: 1300px) {
  h1 {
    font-size: 64px;
  }

  h2 {
    font-size: 36px;
  }

  h3 {
    font-size: 24px;
  }

  h4 {
    font-size: 22px;
  }

  h5 {
    font-size: 20px;
  }

  p {
    font-size: 16px;
  }

  h6 {
    font-size: 14px;
  }
}

/* width */
::-webkit-scrollbar {
  width: 5px;
  height: 5px;
}

/* Track */
::-webkit-scrollbar-track {
  background: #f1f1f1;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: #cecece;
  border-radius: 5px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #cecece;
}

select {
  -webkit-padding-end: 30px !important;
  -webkit-padding-start: 10px !important;
}
